{
  "name": "next-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cp env/.env.development .env.local && next dev",
    "dev:staging": "cp env/.env.staging .env.local && next dev --port 3002",
    "build": "cp env/.env.development .env.local && next build",
    "build:staging": "cp env/.env.staging .env.local && next build",
    "build:production": "cp env/.env.production .env.local && next build",
    "start": "next start",
    "start:staging": "next start --port 3002",
    "preview:staging": "npm run build:staging && npm run start:staging",
    "preview:production": "npm run build:production && npm run start",
    "env:dev": "cp env/.env.development .env.local",
    "env:staging": "cp env/.env.staging .env.local",
    "env:prod": "cp env/.env.production .env.local",
    "env:clean": "rm -f .env.local",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "14.1.0",
    "react": "^18",
    "react-dom": "^18",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
